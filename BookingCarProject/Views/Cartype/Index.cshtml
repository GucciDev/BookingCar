@model IEnumerable<BookingCarProject.Models.Cartype>;
@{
    ViewData["Title"] = "หน้าแรก";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.Count()>0)
{
    <h1 class="text-center">รถทั้งหมดในบริษัท</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>รหัสรถ</th>
                <th>ชื่อรถ</th>
                <th>ประเภทรถ</th>
                <th>จำนวนที่นั่ง</th>
                <th>แก้ไข</th>
                <th>ลบ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cartype in Model)
            {
                <tr>
                    <th>@cartype.Id</th>
                    <th>@cartype.Name</th>
                    <th>@cartype.Type</th>
                    <th>@cartype.Seat</th>
                    <th>
                        <a class="btn btn-warning" asp-controller="Cartype" asp-action="Edit" asp-route-id="@cartype.Id">แก้ไข</a>
                    </th>
                    <th><a class="btn btn-danger" asp-controller="Cartype" asp-action="Delete" asp-route-id="@cartype.Id" onclick="return confirm('คุณต้องการลบ @cartype.Name หรือไม่?')">ลบ</a></th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-secondary">ไม่พบข้อมูลรถอยู่ในระบบ</div>
}